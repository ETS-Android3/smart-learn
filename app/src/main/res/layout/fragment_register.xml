<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sharedViewModel"
            type="com.smart_learn.presenter.activities.authentication.AuthenticationSharedViewModel" />
        <variable
            name="viewModel"
            type="com.smart_learn.presenter.activities.authentication.fragments.register.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presenter.activities.authentication.fragments.register.RegisterFragment">

        <TextView
            android:id="@+id/tvInfo_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="Already have an account?"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

        <TextView
            android:id="@+id/tvInfo_2"
            android:layout_width="0dp"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:text="Create a new account"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/etProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="182dp"
            android:text="Register"
            app:layout_constraintBottom_toTopOf="@+id/tvInfo_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRetypePassword" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="141dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="20dp"
            android:text="Login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo_1" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="305dp"
            android:layout_height="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:hint="Email"
            android:text="@={sharedViewModel.liveLoginForm.email}"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/etPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etProfile" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="307dp"
            android:layout_height="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={sharedViewModel.liveLoginForm.password}"
            app:layout_constraintBottom_toTopOf="@+id/etRetypePassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etRetypePassword"
            android:layout_width="305dp"
            android:layout_height="54dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:hint="Retype password"
            android:inputType="textPassword"
            android:text="@={viewModel.liveRegisterForm.retypedPassword}"
            app:layout_constraintBottom_toTopOf="@+id/btnRegister"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <EditText
            android:id="@+id/etProfile"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:hint="Profile name"
            android:inputType="textPersonName"
            android:text="@={viewModel.liveRegisterForm.profile}"
            app:layout_constraintBottom_toTopOf="@+id/etEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInfo_2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>