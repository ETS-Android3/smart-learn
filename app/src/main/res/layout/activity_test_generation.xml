<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TestGenerationActivity">

    <Button
        android:id="@+id/btnGenerateTest"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="134dp"
        android:text="Generate test"
        app:layout_constraintBottom_toTopOf="@+id/etGeneratedCode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnConnectToTest"
        android:layout_width="245dp"
        android:layout_height="57dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="110dp"
        android:text="Connect to existing test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etGeneratedCode" />

    <EditText
        android:id="@+id/etGeneratedCode"
        android:layout_width="332dp"
        android:layout_height="63dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="enter code"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btnConnectToTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGenerateTest" />

</androidx.constraintlayout.widget.ConstraintLayout>