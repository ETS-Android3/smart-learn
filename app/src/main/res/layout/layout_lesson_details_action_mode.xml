<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="passedViewHolder"
            type="com.smart_learn.presenter.recycler_view.adapters.LessonRVAdapter.LessonViewHolder" />
    </data>

    <LinearLayout
          android:id="@+id/actionModeLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:background="@{passedViewHolder.liveLesson.selected ? @color/white_selected : @color/white}">

          <TextView
              android:id="@+id/tvLessonName"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="2dp"
              android:layout_marginTop="2dp"
              android:layout_marginEnd="2dp"
              android:text="@{passedViewHolder.liveLesson.name}"
              android:textSize="24sp" />

          <ImageView
              android:id="@+id/ivCheckLesson"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:visibility="@{passedViewHolder.liveLesson.selected ? View.VISIBLE : View.INVISIBLE}"
              app:srcCompat="@android:drawable/checkbox_on_background" />
      </LinearLayout>
</layout>